<main>

    <div class="container text-center">

        <div class="row">
            <div class="col-sm-1 col-md-2 col-lg-4">

            </div>
            <div class="col-sm-10 col-md-8 col-lg-4 light-gradient column">
                <h2>Edit my post</h2>
                <form action="" class="">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Title</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" name="post-title"
                            value="{{post.title}}" />
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Contents</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="10"
                            name="post-contents">{{post.contents}}</textarea>
                    </div>
                    <button type="button" class="btn btn-outline-success edit-post-form">Save</button>
                    <button type="button" class="btn btn-outline-danger delete-post-btn">Delete</button>
                </form>
            </div>
            <div class="col-sm-1 col-md-2 col-lg-4 column">
                <div>
                    <a>{{post.comments.length}} {{format_plural "Comment"
                        post.comments.length}}</a>
                </div>
                {{> comments post.comments}}
            </div>
        </div>
    </div>
</main>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/logout.js"></script>